@using WebApp.Models
@model IList<PatientModel>

@{
    Layout = "_Layout";
}

<div class="row">
    <h1>Patients List  
        <a href="@Url.Action("AddPatient","Patient")" style="float:right;" class="btn btn-primary">Add Patient</a></h1>
    
</div>
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">FullName</th>
                <th scope="col">Adhar No</th>
                <th scope="col">Mobile No</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Age(Years)</th>
                <th scope="col">Address</th>
                <th scope="col">Active</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(PatientModel patient in Model)
            {
                <tr>
                    <td>@patient.FullName</td>
                    <td>@patient.AdharNo</td>
                    <td>@patient.MobileNo</td>
                    <td>@patient.DateOfBirth.ToString("dd/MM/yyyy")</td>
                    <td>@patient.AgeInYears()</td>
                    <td>@patient.Address</td>
                    <td>@patient.IsActive</td>
                    <td><a href="@Url.Action("PatientDetail","Patient")">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>