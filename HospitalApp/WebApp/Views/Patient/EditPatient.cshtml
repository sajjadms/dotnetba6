@{
    Layout = "_Layout";
}

<style>
    .form-group {
        margin-top: 20px;
    }
</style>

<div class="row">

    <h1>Edit Patient</h1>
    <form action="/Patient/UpdatePatient" method="post">

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="PatientName">Name</label>
                <input type="text" class="form-control" id="PatientName" placeholder="Enter Name" value="John">
            </div>
            <div class="form-group col-md-6">
                <label for="MobileNo">Mobile No</label>
                <input type="text" class="form-control" id="MobileNo" placeholder="Enter Mobile No" value="+91 1231123">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label for="Gender">Gender</label>
            <select class="form-control" id="Gender">
                <option>Choose...</option>
                <option selected value="1">Male</option>
                <option value="2">Female</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="inputAddress">Address</label>
            <textarea class="form-control" id="inputAddress" placeholder="Enter Address">

            </textarea>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity" value="KURNOOL">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-top:20px;">Update Patient</button>
    </form>
</div>